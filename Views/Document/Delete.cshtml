@model WMSApp.Models.Document;

@{
    ViewBag.Title = "Delete document";
    Layout = "_Layout";
}

<h1>Delete Document</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Document</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Document Number
        </dt>
        <dd class="col-sm-10">
            @Model.DocumentNumber
        </dd>
        <dt class="col-sm-2">
            Document Type
        </dt>
        <dd class="col-sm-10">
            @Model.DocumentType
        </dd>
        <dt class="col-sm-2">
            Date
        </dt>
        <dd class="col-sm-10">
            @Model.Date.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Created By
        </dt>
        <dd class="col-sm-10">
            @Model.CreatedBy
        </dd>
    </dl>

    <form asp-controller="Document" asp-action="Delete">
        <input type="hidden" asp-for="DocumentId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
